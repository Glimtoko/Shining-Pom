amr.regrid_int      = 2       # how often to regrid

# TIME STEP CONTROL
adv.do_reflux = 0

# Tagging
adv.phierr = 1.01  1.1  1.5

# PLOTFILES
amr.plot_file  = output/plot    # root name of plot file
