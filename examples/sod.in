pom.problem = 1
pom.max_step  = 1000000
pom.end_time = 0.25
pom.cfl = 0.7     


# PROBLEM SIZE & GEOMETRY
geometry.is_periodic =  0 0 0
geometry.coord_sys   =  0       # 0 => cart
geometry.prob_lo     =  0.0  0.0
geometry.prob_hi     =  1.0  1.0
